
@{
    ViewBag.Title = "SearchAndFilter";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
        }

        .filters-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 1.5rem;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .filters-container h2 {
                text-align: center;
                margin-bottom: 1.5rem;
            }

        .section {
            margin-bottom: 1.5rem;
        }

        .section-title {
            margin-bottom: 0.5rem;
            color: #ff5a5f;
            font-weight: bold;
        }

        .button-group {
            display: flex;
            gap: 0.5rem;
        }

            .button-group button {
                flex: 1;
                padding: 0.8rem;
                border: 1px solid #ddd;
                border-radius: 25px;
                background-color: #fff;
                color: #000;
                font-size: 1rem;
                cursor: pointer;
                transition: all 0.3s;
            }

                .button-group button.active {
                    background-color: #ff5a5f;
                    color: #fff;
                    border-color: #ff5a5f;
                }

        .price-range {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .price-range input {
                width: 45%;
                padding: 0.5rem;
                border: 1px solid #ddd;
                border-radius: 5px;
                text-align: center;
            }

        .property-types,
        .essentials {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

            .property-types button,
            .essentials input[type="checkbox"] + label {
                flex: 1 1 45%;
                padding: 1rem;
                text-align: center;
                border: 1px solid #ddd;
                border-radius: 8px;
                background: #fff;
                cursor: pointer;
                transition: all 0.3s;
            }

                .property-types button.active,
                .essentials input[type="checkbox"]:checked + label {
                    border-color: #ff5a5f;
                    color: #ff5a5f;
                    font-weight: bold;
                }

            .essentials input[type="checkbox"] {
                display: none;
            }

        .toggle-switch {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .toggle-switch input[type="checkbox"] {
                display: none;
            }

            .toggle-switch label {
                position: relative;
                display: inline-block;
                width: 40px;
                height: 20px;
            }

                .toggle-switch label::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: #ddd;
                    border-radius: 20px;
                    transition: background 0.3s;
                }

                .toggle-switch label::after {
                    content: '';
                    position: absolute;
                    top: 2px;
                    left: 2px;
                    width: 16px;
                    height: 16px;
                    background: #fff;
                    border-radius: 50%;
                    transition: transform 0.3s;
                }

            .toggle-switch input[type="checkbox"]:checked + label::before {
                background: #ff5a5f;
            }

            .toggle-switch input[type="checkbox"]:checked + label::after {
                transform: translateX(20px);
            }

        .confirm-btn {
            display: block;
            width: 100%;
            padding: 1rem;
            background: #ff5a5f;
            color: #fff;
            border: none;
            border-radius: 25px;
            font-size: 1.2rem;
            text-align: center;
            cursor: pointer;
            margin-top: 1.5rem;
            transition: background 0.3s;
        }

            .confirm-btn:hover {
                background: #e14e4e;
            }
    </style>
</head>
<body>

    <div class="filters-container">
        <h2>Filters</h2>

        <form method="get" action="/Home/Index">
            <!-- Type of Place -->
            <div class="section">
                <p class="section-title">Type of Place</p>
                <div class="button-group">
                    <button type="submit" name="propertyType" value="Any Type">Any Type</button>
                    <button type="submit" name="propertyType" value="Room">Room</button>
                    <button type="submit" name="propertyType" value="House">House</button>
                </div>
            </div>

            <!-- Price Range -->
            <div class="section">
                <p class="section-title">Price Range</p>
                <div class="price-range">
                    <input type="number" name="minPrice" placeholder="Min">
                    <span>—</span>
                    <input type="number" name="maxPrice" placeholder="Max">
                </div>
            </div>

            <!-- Bedrooms -->
            <div class="section">
                <p class="section-title">Bedrooms</p>
                <div class="button-group">
                    <button type="submit" name="bedrooms" value="Any">Any</button>
                    <button type="submit" name="bedrooms" value="1">1</button>
                    <button type="submit" name="bedrooms" value="2">2</button>
                    <button type="submit" name="bedrooms" value="3">3</button>
                </div>
            </div>

            <!-- Bathrooms -->
            <div class="section">
                <p class="section-title">Bathrooms</p>
                <div class="button-group">
                    <button>Any</button>
                    <button>1</button>
                    <button>2</button>
                    <button>3</button>
                </div>
            </div>

            <!-- Property Type -->
            <div class="section">
                <p class="section-title">Property Type</p>
                <div class="property-types">
                    <button>Bachelor</button>
                    <button>Family</button>
                    <button>Cottage</button>
                    <button>Luxury</button>
                </div>
            </div>

            <!-- Essentials -->
            <div class="section">
                <p class="section-title">Essentials</p>
                <div class="essentials">
                    <input type="checkbox" id="wifi">
                    <label for="wifi">Wifi</label>
                    <input type="checkbox" id="kitchen">
                    <label for="kitchen">Kitchen</label>
                    <input type="checkbox" id="tv">
                    <label for="tv">TV</label>
                    <input type="checkbox" id="hotwater">
                    <label for="hotwater">Hot Water</label>
                </div>

                <!-- Booking Options -->
                <div class="section">
                    <p class="section-title">Booking Options</p>
                    <div class="toggle-switch">
                        <span>Instant Book</span>
                        <input type="checkbox" id="instant-book">
                        <label for="instant-book"></label>
                    </div>
                    <div class="toggle-switch">
                        <span>Self Check-in</span>
                        <input type="checkbox" id="self-checkin">
                        <label for="self-checkin"></label>
                    </div>
                    <div class="toggle-switch">
                        <span>Allow Pets</span>
                        <input type="checkbox" id="allow-pets">
                        <label for="allow-pets"></label>
                    </div>
                </div>

                <button class="confirm-btn" type="submit">Confirm</button>
        </form>

    </div>

    <script>
    // Toggle active state for buttons
    document.querySelectorAll('.button-group button, .property-types button').forEach(button => {
        button.addEventListener('click', () => {
            // Remove active class from siblings
            button.parentElement.querySelectorAll('button').forEach(btn => btn.classList.remove('active'));
            button.classList.add('active');
        });
    });

    // Confirm button event
    document.querySelector('.confirm-btn').addEventListener('click', () => {
        alert('Filters confirmed!');
    });
    </script>

</body>
</html>

